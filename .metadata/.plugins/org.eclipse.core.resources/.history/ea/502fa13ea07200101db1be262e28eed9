package com.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.entity.User;
import com.feignclientservice.UserFeignClient;
import com.responseentity.ApiResponse;

@RestController
@RequestMapping("/api/consumer")
public class MicroClientServiceController {

	@Autowired
    private UserFeignClient userFeignClient;

	   public void fetchAndSaveUsers() {
	        ApiResponse<List<User>> response = userFeignClient.getAllUsers();

	        if (response != null && response.getPayload() != null) {
	            List<User> entities = response.getPayload().stream().map(user -> {
	                NewUserEntity entity = new NewUserEntity();
	                entity.setId(user.getId());
	                entity.setName(user.getName());
	                entity.setEmail(user.getEmail());
	                return entity;
	            }).collect(Collectors.toList());

	            newUserRepository.saveAll(entities);
	        }
	    }
}
